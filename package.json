{
  "name": "ozon-wb-webdev",
  "version": "1.0.0",
  "description": "Сайт для выдачи цифровых продуктов по заказам Ozon/Wildberries",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "nodemon api/src/index.js",
    "dev:web": "cd web && npm run dev",
    "build": "cd web && npm run build",
    "start": "node api/src/index.js",
    "db:migrate": "node scripts/run-migration.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.19.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.14"
  }
}
